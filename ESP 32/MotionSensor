#define BLYNK_TEMPLATE_ID "TMPL3WIwifVuQ"
#define BLYNK_TEMPLATE_NAME "saurav dutta"
#define BLYNK_AUTH_TOKEN "1W58hF0flH8oqVWlfTHwjSPif-mJKOV0"

#include <WiFi.h>
#include <BlynkSimpleEsp32.h>

// WiFi credentials
char ssid[] = "YOUR_WIFI_NAME";
char pass[] = "YOUR_WIFI_PASSWORD";

// Pin definitions (ESP32 GPIOs)
#define PIR_PIN    27
#define LED_PIN     2
#define BUZZER_PIN 26

WidgetLCD lcd(V1);   // LCD widget on V1

void setup()
{
  Serial.begin(115200);

  pinMode(PIR_PIN, INPUT);
  pinMode(LED_PIN, OUTPUT);
  pinMode(BUZZER_PIN, OUTPUT);

  digitalWrite(LED_PIN, LOW);
  digitalWrite(BUZZER_PIN, LOW);

  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);

  lcd.clear();
  lcd.print(0, 0, "Motion System");
  lcd.print(0, 1, "Status: Ready");
}

void loop()
{
  Blynk.run();

  int motion = digitalRead(PIR_PIN);

  if (motion == HIGH)
  {
    digitalWrite(LED_PIN, HIGH);
    digitalWrite(BUZZER_PIN, HIGH);

    lcd.clear();
    lcd.print(0, 0, "⚠ ALERT ⚠");
    lcd.print(0, 1, "Motion Detected");

    Blynk.virtualWrite(V0, 255);   // Optional LED widget
  }
  else
  {
    digitalWrite(LED_PIN, LOW);
    digitalWrite(BUZZER_PIN, LOW);

    lcd.clear();
    lcd.print(0, 0, "All Safe");
    lcd.print(0, 1, "No Motion");

    Blynk.virtualWrite(V0, 0);
  }

  delay(500);
}
